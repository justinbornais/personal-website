---
const { title, subtitle } = Astro.props;
---

<section class="min-h-screen flex flex-col-reverse lg:flex-row lg:items-center justify-center lg:space-x-10 p-6 lg:p-12">
  <div class="text-center lg:text-right lg:w-1/2 order-2 lg:order-1">
    <p class="text-lg text-gray-700 dark:text-gray-200">Hello, my name is</p>
    <h1 class="text-5xl lg:text-7xl font-bold my-2 name">Justin Bornais</h1>
    <p class="text-lg text-gray-700 dark:text-gray-200">Software Developer, Musician</p>
  </div>
  <div class="flex mx-auto lg:mx-0 lg:w-1/2 mt-3 lg:mt-0 order-1 lg:order-2">
    <div class="w-60 h-60 lg:w-80 lg:h-80 overflow-hidden rounded-lg">
      <img
        src="/personal-website/me.webp"
        alt="Justin Bornais"
        class="w-full h-full object-cover"
        style="object-position: 100% 50%; transform: scale(1.2); transform-origin: 23% 50%;"
      >
    </div>
  </div>
</section>

<style>
  .name {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>