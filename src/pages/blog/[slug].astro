---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout title={`${post.data.title} - Justin Bornais`}>
  <main class="min-h-screen bg-neutral-900 py-12 px-6">
    <article class="max-w-3xl mx-auto">
      <a
        href="/blog"
        class="text-blue-400 hover:text-blue-300 mb-8 inline-block transition-colors"
      >
        &larr; Back to Blog
      </a>

      <header class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {post.data.title}
        </h1>
        <div class="flex items-center gap-4 text-gray-400">
          <span>{post.data.author}</span>
          <span>â€¢</span>
          <time datetime={post.data.pubDate.toISOString()}>
            {formatDate(post.data.pubDate)}
          </time>
        </div>
        {post.data.tags.length > 0 && (
          <div class="flex gap-2 mt-4">
            {post.data.tags.map((tag: string) => (
              <span class="text-xs bg-neutral-700 text-gray-300 px-2 py-1 rounded">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <div class="prose prose-invert prose-lg max-w-none">
        <Content />
      </div>
    </article>
  </main>
</Layout>

