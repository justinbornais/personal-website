---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout title="Blog - Justin Bornais">
  <main class="min-h-screen bg-neutral-900 py-12 px-6">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Blog</h1>
      <p class="text-gray-400 text-lg mb-12">
        Thoughts on software development, music, and everything in between.
      </p>

      <div class="space-y-8">
        {posts.map((post) => (
          <article class="bg-neutral-800 rounded-lg p-6 hover:bg-neutral-750 transition-colors border border-neutral-700 hover:border-neutral-600">
            <a href={`/personal-website/blog/${post.slug}`} class="block">
              <h2 class="text-2xl font-semibold text-white mb-2 hover:text-blue-400 transition-colors">
                {post.data.title}
              </h2>
              <p class="text-gray-400 mb-4">{post.data.description}</p>
              <div class="flex items-center justify-between">
                <time class="text-sm text-gray-500" datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
                <div class="flex gap-2">
                  {post.data.tags.map((tag: string) => (
                    <span class="text-xs bg-neutral-700 text-gray-300 px-2 py-1 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <p class="text-gray-400 text-center py-12">
          No blog posts yet. Check back soon!
        </p>
      )}
    </div>
  </main>
</Layout>
