---
import Navbar from '../components/Navbar.tsx';
import Footer from '../components/Footer.tsx';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-neutral-100 dark:bg-neutral-900">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Justin Bornais - Software Developer and Musician" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href={`${import.meta.env.BASE_URL}me-thumbnail.webp`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar client:load />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: rgb(207, 171, 70);
		--accent-light: rgb(28, 60, 165);
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			var(--accent),
			var(--accent-light) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	body {
		margin: 0;
		padding: 0;
		height: 100%;
		display: flex;
		flex-direction: column;
		flex-grow: 1;
	}
	main {
		flex-grow: 1;
		overflow-y: auto;
		margin-top: 64px!important;
	}
	@keyframes gradient {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}
	.animate-gradient {
		animation: gradient 6s ease infinite;
	}
</style>
